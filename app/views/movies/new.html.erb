  <%= form_for Movie.new do |f| %>
  <%= f.label :title, 'Título' %>
  <%= f.text_field :title %>
  <%= f.label :year, 'Ano de lançamento' %>
  <%= f.text_field :year %>
  <%= f.label :country, 'País de origem' %>
  <%= f.text_field :country %>
  <%= f.label :plor, 'Sinopse' %>
  <%= f.text_field :plot %>
  <%= f.label :genre, 'Gênero' %>
  <%=f.collection_select :genre, Genre.all, :id, :name  %>
  <%= f.label :director, 'diretor' %>
  <%=f.collection_select :director, Director.all, :id, :name  %>
  <%= f.submit 'Editar' %>
 
  <%= f.submit 'Criar' %>
<% end %>