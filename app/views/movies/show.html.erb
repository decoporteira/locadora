<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
  

  <div class="col">
    <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-2">
            <h4 class="my-0 fw-normal"><%= @movie.title %> </h4>
        </div>
        <div class="card-body">
            <% if @movie.poster.representable? %>
                <%= image_tag(@movie.poster, style:"width:150px") %>
            <% else %>
                <p>Sem poster cadastrado</p>
            <% end %>
            <br />
            <br />
            <strong>Diretor: </strong><%= @movie.director.name %> <br />
            <strong>Disponibilidade: </strong><%= @movie.is_available %> <br />
            <strong>Ano de lan√ßamento: </strong><%= @movie.year %>  <br />
            <%= link_to 'Editar', edit_movie_path(@movie.id) %><br />
        
        </div>
        </div>
    </div>
  
    
</div>


